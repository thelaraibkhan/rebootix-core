{
  "name": "@rebootix/tlon",
  "version": "2026.1.30",
  "description": "Rebootix Tlon/Urbit channel plugin",
  "type": "module",
  "dependencies": {
    "@urbit/aura": "^3.0.0",
    "@urbit/http-api": "^3.0.0"
  },
  "devDependencies": {
    "rebootix": "workspace:*"
  },
  "rebootix": {
    "extensions": [
      "./index.ts"
    ],
    "channel": {
      "id": "tlon",
      "label": "Tlon",
      "selectionLabel": "Tlon (Urbit)",
      "docsPath": "/channels/tlon",
      "docsLabel": "tlon",
      "blurb": "decentralized messaging on Urbit; install the plugin to enable.",
      "order": 90,
      "quickstartAllowFrom": true
    },
    "install": {
      "npmSpec": "@rebootix/tlon",
      "localPath": "extensions/tlon",
      "defaultChoice": "npm"
    }
  }
}
