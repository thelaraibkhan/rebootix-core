{
  "name": "@rebootix/nostr",
  "version": "2026.1.30",
  "description": "Rebootix Nostr channel plugin for NIP-04 encrypted DMs",
  "type": "module",
  "dependencies": {
    "nostr-tools": "^2.22.1",
    "rebootix": "workspace:*",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "rebootix": "workspace:*"
  },
  "rebootix": {
    "extensions": [
      "./index.ts"
